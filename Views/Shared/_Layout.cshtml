@using LeavePortal.Utility
@using Microsoft.EntityFrameworkCore;
@using LeavePortal.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> _userManager
@inject ApplicationDbContext context
@{

    var userId = _userManager.GetUserId(User);
    var role = (from ur in context.UserRoles
                join r in context.Roles on ur.RoleId equals r.Id
                where ur.UserId == userId
                select r.Name).FirstOrDefault();
    var modules = new List<ModuleViewModel>();

    if (role == "Admin")
    {
        modules = context.Modules
         .Where(x => x.ParentModuleId == null && x.ModuleIcons!="fas fa-home")
         .Select(m => new ModuleViewModel
                 {
                     ModuleId = m.ModuleId,
                     ModuleName = m.ModuleName,
                     ModuleIcon = m.ModuleIcons,
                     ModuleUrl = m.ModuleUrl,
                 })
         .ToList();
    }
    else
    {
        var userPermissions = context.UserPermissions
            .Where(x => x.UserId == userId )
            .Select(x => x.ModuleId)
            .ToList();

        modules = context.Modules
       .Where(m => userPermissions.Contains(m.ModuleId) && m.ModuleIcons != "fas fa-home" && m.ParentModuleId==null)
       .Select(m => new ModuleViewModel
               {
                   ModuleId = m.ModuleId,
                   ModuleName = m.ModuleName,
                   ModuleIcon = m.ModuleIcons,
                   ModuleUrl = m.ModuleUrl,
               })
       .ToList();
    }
}


