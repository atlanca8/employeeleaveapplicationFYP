@model IEnumerable<LeavePortal.Utility.LeavesVM>
@{
    ViewData["Title"] = "Leaves";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var today = DateTime.Today;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashborad</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","User")">Home</a></li>
                    <li class="breadcrumb-item active">My Leaves</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="container-fluid">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title" style="float: left">List of My Leaves</h3>
                        @*           <a asp-action="AddEmployee" style="float: right;" class="btn btn-primary btn-sm">Add New Employee</a> *@
                    </div>
                    <div class="card-body">
                        <table  width="100%" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Leave Type</th>
                                    <th>Date</th>
                                    <th>Duration</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Status</th>
                                    <th>User</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.LeaveType</td>
                                        <td>@(item.Date.HasValue ? item.Date.Value.ToString("yyyy-MMM-dd") : "No Date")</td>
                                        <td>@item.Duration</td>
                                        <td>@(item.StartDate.HasValue ? item.StartDate.Value.ToString("yyyy-MMM-dd") : "No Date")</td>
                                        <td>@(item.EndDate.HasValue ? item.EndDate.Value.ToString("yyyy-MMM-dd") : "No Date")</td>
                                        <td>@Enum.GetName(typeof(LeavePortal.Utility.Enums.LeaveStatusEnum), item.Status)</td>
                                        <td>@item.ApplicationUser</td>
                                        <td>
                                            <button class="btn btn-success btn-sm"
                                                    onclick="Change('@item.LeaveId', '@((int)LeavePortal.Utility.Enums.LeaveStatusEnum.Canceled)')"
                                            @(item.Date.HasValue && item.Date.Value > today && item.Status == (int)LeavePortal.Utility.Enums.LeaveStatusEnum.Pending ? "" : "disabled") >
                                                Cancel
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>    
        function Change(id,status) {
            swal({
                title: "Are you sure?",
                text: "You want to change status!",
                type: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            url: "/User/ChangeLeaveStatus",
                            type: "POST",
                            data: {
                                id: id,
                                status: status
                            },
                            dataType: "json",
                            success: function () {
                                swal("Done!", "It was succesfully changed!", "success");
                                window.location.href = '../User/MyLeaves';
                            },
                            error: function (xhr, ajaxOptions, thrownError) {
                                swal("Error !", "Please try again", "error");
                            }
                        });
                    } else {
                        swal("Your data is safe!");
                    }
                });
        }
    </script>
}
