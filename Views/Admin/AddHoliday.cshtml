@model LeavePortal.Models.Holiday

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashborad</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Holidays","Admin")">Holidays </a></li>
                    <li class="breadcrumb-item active">Add</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="card">
                    <div style="background-color:#4b545c;" class="card-header">
                        <p style="font-size:larger;color:white" class="text-left">Add Holiday</p>
                    </div>
                    <div class="card-body">
                        <form asp-action="AddHoliday" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Name">IsPublic?<span class="text-danger">*</span></label>
                                <select asp-for="IsPublic" class="form-control">
                                    <option selected disabled>Select Option</option>
                                    <option value="True">Yes</option>
                                    <option value="False">No</option>

                                </select>
                                <span asp-validation-for="IsPublic" class="text-danger"></span>
                            </div>  
                            <div class="form-group">
                                <label for="Name">Date<span class="text-danger">*</span></label>
                                <input type="date" asp-for="Date" class="form-control" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Name">Short Description<span class="text-danger"></span></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="text-right">
                                    <a class="btn btn-warning" type="button" asp-action="Holidays" asp-controller="Admin" class="btn btn-comfly-secondary" style="width: 120px;">Back</a>
                                    <button type="submit" class="btn" style="background-color:#4b545c;color:white; width: 120px;" id="btnSave" name="Save">
                                        Save
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
